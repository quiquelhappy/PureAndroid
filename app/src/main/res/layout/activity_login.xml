<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login" android:layout_marginLeft="100dp" android:layout_marginRight="100dp"
        android:gravity="center" android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView android:layout_width="match_parent"
                                                  android:id="@+id/pic"
                                                  android:src="@drawable/unknown"
                                                  android:layout_marginBottom="20dp"
                                                  android:layout_height="140dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:gravity="center"
                                                  android:animateLayoutChanges="true"
                                                  android:layout_height="wrap_content">


        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/login_gif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/loading"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
        />
        <Button
                android:text="GET SESSION"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/try_login"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        <Button
                android:text="Login"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/finish_login"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>